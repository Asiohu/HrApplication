@model HrApplicationFinal.Models.ViewModels.AdminViewModels.EditDeparmentViewModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SaveDeparmentId", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal row box container">
        <h4>Edit country</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DepartmentName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentCity, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DepartmentCity, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentPhone, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DepartmentPhone, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentAddressLine, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DepartmentAddressLine, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.HiddenFor(c => c.Id)
                <input type="submit" value="Save changes" class="btn btn-primary" />
            </div>
        </div>

        <div>
            <a asp-area="" asp-controller="Admin" asp-action="ListCompanyTreeStructure">
                Back to List
            </a>
        </div>
    </div>
}